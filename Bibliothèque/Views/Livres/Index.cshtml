@model IEnumerable<Bibliothèque.Models.Livre>

@{
    ViewData["Title"] = "Liste des livres";
}

<h1>Liste des livres</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TomeNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitreSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomPages)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TomeNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitreSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomPages)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
